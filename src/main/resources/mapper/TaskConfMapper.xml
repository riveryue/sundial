<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="sundial.dao.TaskConfDao">

    <sql id="base_column">id, task_name, status, cron</sql>

    <insert id="insert" parameterType="taskConfDO">
        insert into task_conf (task_name, status, cron) values (#{taskName}, #{status}, #{cron})
    </insert>

    <update id="update" parameterType="taskConfDO">
        update task_conf
        <set>
            <if test="taskName != null">
                task_name = #{taskName},
            </if>
            <if test="status != null">
                status = #{status},
            </if>
            <if test="cron != null">
                cron = #{cron}
            </if>
        </set>
        where ID = #{id}
    </update>

    <select id="queryByTaskName" parameterType="string" resultType="taskConfDO">
        SELECT <include refid="base_column"/>  FROM task_conf where task_name = #{taskName}
    </select>

    <select id="queryById" parameterType="java.lang.Integer" resultType="taskConfDO">
        SELECT <include refid="base_column"/>  FROM task_conf where id = #{id}
    </select>

    <select id="query" parameterType="sundial.query.TaskConfQuery" resultType="taskConfDO">
        SELECT <include refid="base_column"/>  FROM task_conf where 1 = 1
        <if test="id != null">
            and id = #{id}
        </if>
        <if test="taskName != null">
            and task_name = #{taskName}
        </if>
        <if test="status != null">
            and status = #{status}
        </if>
        <if test="cron != null">
            and cron = #{cron}
        </if>
    </select>
</mapper>